<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" crossorigin="anonymous">
        <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
        <title>{{ title }}</title>
    </head>
    <body>
        <div class="container">
            <div class="form-group">
                <input id="title-input" type="text" class="form-control" value="{{ title if title != None }}" placeholder="文章标题">
            </div>
            <div id="editor">
                {{ content if content != None }}
            </div>
            <button id="save" type="submit" class="btn btn-primary">保存</button>
            <button id="save-publish" type="submit" class="btn btn-primary">保存并发布</button>
            <button id="delete" type="button" class="btn btn-danger">删除</button>
        </div>
        <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" crossorigin="anonymous"></script>
        <script>
            let quill = new Quill('#editor', {
                modules: {
                    toolbar: [
                        ['bold', 'italic'],
                        ['link', 'blockquote', 'code-block', 'image'],
                        [{ list: 'ordered' }, { list: 'bullet' }]
                    ]
                },
                theme: 'snow'
            })
            function save(release) {
                let content = quill.root.innerHTML;
                let summary = quill.root.innerText.substring(0, 200)
                let title = $('#title-input').val()
                $.ajax({
                    type: "POST",
                    url: window.location.href.split('?')[0],
                    data: JSON.stringify({
                        title,
                        summary,
                        content,
                        release
                    }),
                    success: d => {
                        alert("保存成功")
                    },
                    error: e => {
                        alert("保存失败")
                    },
                    contentType: 'application/json',
                });
            }
            $('#save-publish').click(() => {
                save(true)
            })
            $('#save').click(() => {
                save(false)
            })
            $('#delete').click(() => {
                // should prevent csrf here
                $.ajax({
                    type: "DELETE",
                    url: window.location.href.split('?')[0],
                    success: d => {
                        alert("删除成功")
                        window.location.href = "/"
                    },
                    error: e => {
                        alert("删除失败")
                    },
                    contentType: 'application/json',
                });
            })
        </script>
    </body>
</html>